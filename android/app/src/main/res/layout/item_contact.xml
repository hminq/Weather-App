<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/itemContact"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true">

    <ImageView
        android:id="@+id/ivContact"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:tint="?attr/colorPrimary"
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"
        android:background="@drawable/bg_rounded"
        android:padding="@dimen/icon_padding"
        android:src="@drawable/ic_share" />

    <TextView
        android:id="@+id/tvContact"
        app:layout_constraintBottom_toBottomOf="@id/ivContact"
        app:layout_constraintStart_toEndOf="@id/ivContact"
        app:layout_constraintTop_toTopOf="@id/ivContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/contact_us"
        android:textColor="?attr/colorOnSurface"
        android:textSize="@dimen/body1_text_size" />

    <ImageView
        android:id="@+id/ivArrow1"
        app:layout_constraintBottom_toBottomOf="@id/tvContact"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvContact"
        app:tint="?attr/colorOnSurfaceVariant"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/ic_arrow_right" />

</androidx.constraintlayout.widget.ConstraintLayout>