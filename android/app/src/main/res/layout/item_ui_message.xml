<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/item_ui_message"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="8dp">

    <ImageView
        android:id="@+id/ivMessage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_error" />

    <TextView
        android:id="@+id/tvMessage"
        app:layout_constraintBottom_toBottomOf="@id/ivMessage"
        app:layout_constraintStart_toEndOf="@id/ivMessage"
        app:layout_constraintTop_toTopOf="@id/ivMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/close_margin"
        android:text="This is a message"
        android:textColor="?attr/colorOnSurface"
        android:textSize="@dimen/body2_text_size" />
</androidx.constraintlayout.widget.ConstraintLayout>