<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivWindSpeed"
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"
        android:background="@drawable/bg_rounded"
        android:padding="@dimen/icon_padding"
        android:src="@drawable/ic_wind"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="?attr/colorPrimary" />

    <TextView
        android:id="@+id/tvWindSpeed"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:text="@string/wind_speed_title"
        android:textColor="?attr/colorOnSurface"
        android:textSize="@dimen/body1_text_size"
        app:layout_constraintBottom_toBottomOf="@id/ivWindSpeed"
        app:layout_constraintEnd_toStartOf="@id/toggleWindSpeed"
        app:layout_constraintStart_toEndOf="@id/ivWindSpeed"
        app:layout_constraintTop_toTopOf="@id/ivWindSpeed" />

    <hminq.dev.weatherapp.presentation.widgets.UnitToggleView
        android:id="@+id/toggleWindSpeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
